int print_int(int x) {
    int q = 0;
    int r = 0;

    if (x < 0) {
        putchar('-');
        x = 0 - x;
    }

    if (x >= 10) {
        q = x / 10;
        print_int(q);
    }

    r = x % 10;
    putchar('0' + r);
    return 0;
}

